        .animation-container {
            position: relative;
            width: 100vw;
            height: 100vh;
            display: flex;
            justify-content: center;
            align-items: center;
        }
        /* 图片通用样式 */
        .scp-img {
            position: absolute;
            opacity: 0;
            transition: all 0.8s ease;
        }
        /* 图一动画：淡入→缩小→左滑 */
        #img1 {
            width: 80vw; /* 初始占据大尺寸 */
            animation: fadeIn 0.8s ease forwards, 
                       scaleDown 0.8s ease forwards 0.8s,
                       slideLeft 0.8s ease forwards 1.6s;
        }
        @keyframes fadeIn {
            0% { opacity: 0; }
            100% { opacity: 1; }
        }
        @keyframes scaleDown {
            0% { transform: scale(1); }
            100% { transform: scale(0.5); }
        }
        @keyframes slideLeft {
            0% { transform: scale(0.5) translateX(0); }
            100% { transform: scale(0.5) translateX(-100vw); }
        }
        /* 图二动画：淡入 */
        #img2 {
            width: 60vw;
            opacity: 0;
            animation: fadeIn 0.8s ease forwards 2.4s;
        }
        /* 点击进入按钮 */
        .enter-btn {
            position: absolute;
            bottom: 50px;
            left: 50%;
            transform: translateX(-50%);
            opacity: 0;
            animation: fadeIn 0.5s ease forwards 3.2s;
            cursor: pointer;
            background: transparent;
            border: 1px solid #fff;
            padding: 10px 20px;
            color: #fff;
            font-size: 14px;
            transition: all 0.3s;
        }
        .enter-btn:hover {
            background: #fff;
            color: #000;
        }
        /* 正式内容区域 */
        .content {
            position: absolute;
            width: 100vw;
            height: 100vh;
            display: flex;
            justify-content: center;
            align-items: center;
